@import url('./variables.scss');

// ==================== Global ====================

html {
 background-color: {{ settings.color_main_bg }};
 box-sizing: border-box;
 font-family: {{ settings.font_heading.family }};
 color: {{ settings.color_body_text }}
}

body {
  margin: 0;
}

h1 { font-size: 2rem } // 28px
h2 { font-size: 1.5rem } // 21px
h3 { font-size: 1.25rem } // 17px
h4 { font-size: 1.15rem; font-weight: bold; }

a {
  color: {{ settings.color_body_text }};
  text-decoration: none;
}

a:hover {
  color: {{ settings.color_accent }}
}

input, select, textarea {
  font-size: 1rem;
}

span.social-icon svg {
    fill: {{ settings.color_body_text }};
    width: 50px;
}

.product-grid {
    display: grid;
    grid-template-columns: 1fr;
    grid-gap: 2rem;
}

